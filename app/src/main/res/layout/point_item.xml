<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350sp"
        android:layout_height="15sp"
        android:layout_below="@id/textViewNumberOfPoints"
        android:layout_centerHorizontal="true"

        android:scaleType="fitCenter"
        android:src="@drawable/gradient_line" />

    <!--Creating a TextView-->
    <TextView
        android:id="@+id/textViewWorkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"

        android:fontFamily="@font/roboto_black_italic"
        android:gravity="center"
        android:text="Work Name"
        android:textColor="#808080"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewNumberOfPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="10sp"
        android:layout_alignParentEnd="true"

        android:fontFamily="@font/roboto_black_italic"
        android:gravity="center"
        android:text="70/100"
        android:textColor="#808080"
        android:textSize="25sp" />





</RelativeLayout>
